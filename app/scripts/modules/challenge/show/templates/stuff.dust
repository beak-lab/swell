<div class="mystuff__activity-history">
    <h3>Activity History</h3>
<!-- 
    <div>
        {_activities|js|s}
    </div>

  -->   
    <div id='mystuff-history' class='swipe mystuff__activity-history__wrapper' data-snap-ignore="true">
        <div class="mystuff__activity-history__decks swipe-wrap">
            {#activities}
                {@select key="{type}"}
                    {@eq value="Voteable"}
                        <div class="activity-history__deck">
                            <article class="activity-history__card">
                                <!-- <h4>{title}</h4> -->
                                <h4 class="activity-history__card__title">{question|s}</h4>

                                <h3>Pros:</h3>
                                {@iterate key=pros}
                                    <p>{$value}</p>
                                {/iterate}

                                <h3>Cons:</h3>
                                {@iterate key=cons}
                                    <p>{$value}</p>
                                {/iterate}
                            </article>
                        </div>
                    {/eq}

                    {@eq value="Checkboxable"}
                        <div class="activity-history__deck">
                            <article class="activity-history__card">
                               <h4 class="activity-history__card__title">{question|s}</h4>
                                {@iterate key=data}
                                    <p>{$value.text}</p>
                                {/iterate}
                            </article>
                        </div>
                    {/eq}

                    {@eq value="Draggable"}
                        <div class="activity-history__deck">
                            <article class="activity-history__card">
                                <h4 class="activity-history__card__title">{question|s}</h4>
                                {@iterate key=data}
                                    <p>{$value}</p>
                                {/iterate}
                            </article>
                        </div>
                    {/eq}
                {/select}
            {/activities}
        </div>
    </div>
</div>

